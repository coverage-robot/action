{
    "name": "action",
    "version": "0.0.0",
    "private": false,
    "description": "Coverage Robot for GitHub Actions",
    "type": "module",
    "main": "lib/runtime.js",
    "exports": {
        ".": "./dist/index.js"
    },
    "engines": {
        "node": ">=24.0.0"
    },
    "scripts": {
        "build:compile": "tsc",
        "build:package": "ncc build --license licenses.txt",
        "lint:style": "prettier --check **/*.ts",
        "lint:static-analysis": "eslint src/**/*.ts",
        "test:unit": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest"
    },
    "keywords": [
        "actions",
        "coverage",
        "coverage robot"
    ],
    "author": "Coverage Robot",
    "license": "GPL-3.0-or-later",
    "dependencies": {
        "@actions/core": "^3.0.0",
        "@actions/exec": "^3.0.0",
        "@actions/github": "^9.0.0",
        "@actions/glob": "^0.6.1",
        "@actions/http-client": "^4.0.0",
        "@types/node": "^24.5.2"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "@types/jest": "^30.0.0",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@vercel/ncc": "^0.38.4",
        "eslint": "^10.0.0",
        "eslint-plugin-github": "^6.0.0",
        "eslint-plugin-jest": "^29.0.1",
        "jest": "^30.2.0",
        "js-yaml": "^4.1.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.4",
        "ts-jest-resolver": "^2.0.1",
        "typescript": "^5.9.2"
    }
}
