{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "labels": [
        "dependencies",
        "bump-patch",
        "chore"
    ],
    "packageRules": [
        {
            "description": "Add javascript label o JS dependency updates",
            "matchFileNames": [
                "**/package.json",
                "**/package-lock.json"
            ],
            "addLabels": [
                "javascript"
            ]
        },
        {
            "description": "Add github actions label to CI dependency updates",
            "matchFileNames": [
                ".github/workflows/**"
            ],
            "addLabels": [
                "github-actions"
            ]
        }
    ]
}